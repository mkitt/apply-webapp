{
  "name": "mortarboard",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "flow": "flow ./src",
    "lint": "eslint ./src",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom"
  },
  "dependencies": {
    "apollo-cache-inmemory": "1.1.7",
    "apollo-client": "2.2.2",
    "apollo-link": "1.0.7",
    "apollo-link-http": "1.3.2",
    "glamor": "2.20.40",
    "glamorous": "4.11.4",
    "graphql": "0.12.3",
    "graphql-tag": "2.6.1",
    "gridzzly": "1.0.1",
    "humps": "2.0.1",
    "ramda": "0.25.0",
    "react": "16.2.0",
    "react-apollo": "2.0.4",
    "react-dom": "16.2.0",
    "react-modal": "3.1.12",
    "react-motion": "0.5.2",
    "react-router-dom": "4.2.2",
    "react-router-transition": "1.2.0",
    "react-timeago": "3.4.3",
    "recompose": "0.26.0",
    "styled-system": "1.1.4"
  },
  "devDependencies": {
    "babel-eslint": "8.2.1",
    "babel-preset-flow": "6.23.0",
    "eslint": "4.17.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-flowtype": "2.42.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.6.1",
    "flow-bin": "0.64.0",
    "jest-glamor-react": "3.3.0",
    "react-addons-test-utils": "15.6.2",
    "react-scripts": "1.1.0",
    "react-test-renderer": "16.2.0"
  },
  "babel": {
    "presets": [
      "flow"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "flowtype",
      "import"
    ],
    "env": {
      "browser": "true",
      "jest": "true"
    },
    "rules": {
      "object-curly-newline": "off",
      "react/jsx-filename-extension": "off",
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "jest": {
    "snapshotSerializers": [
      "jest-glamor-react"
    ]
  }
}
